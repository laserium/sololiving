<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sololiving.domain.auth.mapper.RefreshTokenMapper">

    <resultMap id="refreshTokenResultMap" type="com.sololiving.domain.vo.RefreshTokenVo">
        <result property="userId" column="user_id"/>
        <result property="refreshToken" column="refresh_token"/>
        <result property="expiresIn" column="expires_in"/>
        <result property="issuedAt" column="issued_at"/>
        <result property="tokenStatus" column="token_status" javaType="com.sololiving.domain.auth.enums.TokenStatus"/>
        <result property="clientId" column="client_id" javaType="com.sololiving.domain.auth.enums.ClientId"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findRefreshTokenByUserId" resultMap="refreshTokenResultMap">
        SELECT * FROM REFRESH_TOKEN 
        WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.sololiving.domain.vo.RefreshTokenVo">
        INSERT INTO REFRESH_TOKEN (user_id, refresh_token, expires_in, issued_at, token_status, client_id, created_at, updated_at)
        VALUES (#{userId}, #{refreshToken}, #{expiresIn}, #{issuedAt}, #{tokenStatus}, #{clientId}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update" parameterType="com.sololiving.domain.vo.RefreshTokenVo">
        UPDATE REFRESH_TOKEN
        SET refresh_token = #{refreshToken}, expires_in = #{expiresIn}, issued_at = #{issuedAt}, 
            token_status = #{tokenStatus}, updated_at = #{updatedAt}
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteByRefreshToken" parameterType="string">
        DELETE FROM REFRESH_TOKEN 
        WHERE refresh_token = #{refreshToken}
    </delete>

    <select id="existsByUserId" resultType="boolean" parameterType="String">
        SELECT EXISTS(SELECT 1 FROM REFRESH_TOKEN WHERE user_id = #{userId})
    </select>
    
</mapper>
